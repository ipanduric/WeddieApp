<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rma.ipanduric.weddie.GostiActivity">

    <ListView
        android:id="@+id/lvGosti"
        android:layout_width="match_parent"
        android:layout_height="440sp"
        android:padding="@dimen/padding"
        android:layout_above="@+id/bDodajGosta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20sp"
        android:divider="@android:color/transparent"
        android:dividerHeight="4sp">

    </ListView>

    <TextView
    android:id="@+id/tvSuma"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Ukupno:"
    android:textSize="19sp"
        android:layout_marginLeft="5sp"
        android:layout_above="@+id/lvGosti"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30sp" />

    <TextView
        android:id="@+id/tvRez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/accent_material_light_1"
        android:layout_above="@id/lvGosti"
        android:layout_toRightOf="@id/tvSuma"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="28sp"/>

    <Button
        android:id="@+id/bDodajGosta"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_width="@dimen/bodaberi"
        android:text="@string/Dodaj"
        android:layout_marginBottom="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20sp"
        android:layout_marginEnd="20sp" />

</RelativeLayout>
