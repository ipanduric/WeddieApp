<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/details"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rma.ipanduric.weddie.DetailsActivity">

    <TextView
        android:id="@+id/tvIme"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/zadmargina"
        android:layout_marginStart="@dimen/zadmargina"
        android:textSize="@dimen/tekst"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/ivPic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slikasirina"
        android:scaleType="fitXY"
        android:layout_below="@id/tvIme"
        android:layout_marginTop="20sp"
        />
    <TextView
        android:id="@+id/tvWeb1"
        android:layout_width="@dimen/sirina"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/zadmargina"
        android:layout_below="@+id/ivPic"
        android:layout_marginLeft="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/Web"
        android:textSize="@dimen/tekst2"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvWeb"
        android:layout_width="@dimen/sirina"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/zadmargina"
        android:layout_below="@+id/tvWeb1"
        android:layout_marginLeft="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/tekst2"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvTel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWeb"
        android:layout_marginTop="10dp"
        android:text="@string/Tel"
        android:textSize="@dimen/tekst2"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTel1"
        android:layout_marginTop="@dimen/zadmargina"
        android:autoLink="phone"
        android:clickable="true"
        android:textSize="@dimen/tekst2"
        android:textColor="@color/black"/>

</RelativeLayout>
