<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rma.ipanduric.weddie.SLActivity">

    <Button
        android:id="@+id/bDodajStavke"
        android:text="@string/DodajStavke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:layout_margin="@dimen/lvmargina"/>

    <ListView
        android:id="@+id/lvSL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sirina"
        android:layout_below="@id/bDodajStavke"
        android:layout_margin="@dimen/lvmargina"
        android:padding="@dimen/padding"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/padding">
    </ListView>


</RelativeLayout>
