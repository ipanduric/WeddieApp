<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlZad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rma.ipanduric.weddie.ZadatakItem">

    <TextView
        android:id="@+id/tvDatum"
        android:layout_width="match_parent"
        android:text="Datum"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/lvtekst"
        android:padding="@dimen/padding"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/llPovijest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDatum"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tvTekstNaslova"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:textSize="@dimen/zadtekst"
            android:text="Naziv: "
            />
        <TextView
            android:id="@+id/tvNazivZadatka"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvTekstNaslova"
            android:layout_margin="3sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOpis"
        android:layout_below="@+id/llPovijest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:id="@+id/tvTekstOpisa"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Opis: "
            android:layout_marginLeft="5sp"
            android:textSize="@dimen/zadtekst"
            />
        <TextView
            android:id="@+id/tvOpisZadatka"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvTekstOpisa"
            android:layout_margin="3sp"
            android:layout_marginBottom="4sp"

            />
    </LinearLayout>


</RelativeLayout>
