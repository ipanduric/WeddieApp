<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rma.ipanduric.weddie.GostItem">

    <TextView
        android:id="@+id/tvaBrojGosti"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="50px"
        android:textStyle="bold"
        android:hint="3"
        android:gravity="right"
        android:layout_marginTop="15sp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/tvaKategorija"
        android:layout_marginRight="30sp"
        />
    <TextView
        android:id="@+id/tvaPrezime"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17dp"
        android:hint="prezime"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvaIme"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/Ime"
        android:textSize="13dp"
        android:layout_below="@+id/tvaPrezime"
        android:layout_alignLeft="@+id/tvaKategorija"
        android:layout_alignStart="@+id/tvaKategorija" />

    <TextView
        android:id="@+id/tvaKategorija"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="kategorija"
        android:gravity="left"
        android:layout_below="@id/tvaIme"
        />

</RelativeLayout>
