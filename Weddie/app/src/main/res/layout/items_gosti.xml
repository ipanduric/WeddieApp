<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rma.ipanduric.weddie.GostItem">

    <TextView
        android:id="@+id/tvaBrojGosti"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:hint="3"
        android:gravity="right"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/tvaIme"
        android:layout_alignBottom="@+id/tvaIme"
        android:layout_toRightOf="@+id/tvaIme"
        android:layout_toEndOf="@+id/tvaIme" />
    <TextView
        android:id="@+id/tvaPrezime"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17dp"
        android:hint="prezime"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/padding"
        android:layout_margin="2sp"/>

    <TextView
        android:id="@+id/tvaIme"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/Ime"
        android:textSize="15sp"
        android:layout_below="@+id/tvaPrezime"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="2sp"
        android:padding="@dimen/padding"
        />

    <TextView
        android:id="@+id/tvaKategorija"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="kategorija"
        android:gravity="left"
        android:layout_below="@id/tvaIme"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="2sp"
        android:padding="@dimen/padding"

        />

</RelativeLayout>
